% ENUMERATE EQS WITH NUMBERS OF SECTION
%    You have to say   \eqnumsection     Numbers become (1.3)
%

\def\eqnumsection{\@addtoreset{equation}{section}\def\theequation
{\arabic{section}.\arabic{equation}}}

%
% or you can say  \eqnumsubsection Numbers become  (1.1.3)
%

\def\eqnumsubsection{\@addtoreset{equation}{subsection}\def\theequation
{\arabic{section}.\arabic{equation}.\arabic{subsection}}}


% ENUMERATE EQS WITH NUMBERS OF PART
%    You have to say   \eqnumpart     Numbers become (1.3)
%

\def\eqnumpart{\@addtoreset{equation}{part}\def\theequation
{\arabic{part}.\arabic{equation}}}


