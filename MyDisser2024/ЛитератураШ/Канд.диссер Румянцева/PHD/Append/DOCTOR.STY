%
%  \begin{macro}{\alphrus}
%  Representation of \meta{counter} as a lower-case
%                           letter: 1 = а, 2 = б, etc.
%    \begin{macrocode}
\def\alphrus#1{\expandafter\@alphrus\csname c@#1\endcsname}
%    \end{macrocode}
% \end{macro}
%
%  \begin{macro}{\Alphrus}
%  Representation of \meta{counter} as an upper-case
%                           letter: 1 = А, 2 = Б, etc.
%    \begin{macrocode}
\def\Alphrus#1{\expandafter\@Alphrus\csname c@#1\endcsname}
%    \end{macrocode}
% \end{macro}
%
%  \begin{macro}{\@alphrus}
%     |\@alph\FOOcounter|
%     Representation of |\FOOcounter| as a lower-case
%                    letter: 1 = а, 2 = б, etc.
%    \begin{macrocode}
\def\@alphrus#1{%
  \ifcase#1\or а\or б\or в\or г\or д\or е\or ж\or з\or и\or й\or
   к\or л\or м\or н\or о\or п\or р\or с\or т\or у\or ф\or х\or ц\or ч\or
    ш\or щ\or ъ\or ы \or ь\or э\or ю\or я\else\@ctrerr\fi}
%    \end{macrocode}
%  \end{macro}
%
%  \begin{macro}{\@Alphrus}
%     |\@Alph\FOOcounter|
%       Representation of |\FOOcounter| as an upper-case
%                    letter: 1 = A, 2 = Б, etc.
%    \begin{macrocode}
\def\@Alphrus#1{%
  \ifcase#1\or А\or Б\or В\or Г\or Д\or Е\or Ж\or З\or И\or Й\or
   К\or Л\or М\or Н\or О\or П\or Р\or С\or Т\or У\or Ф\or Х\or Ц\or Ч\or
    Ш\or Щ\or Ъ\or Ы\or Ь\or Э\or Ю\or Я\else\@ctrerr\fi}
%    \end{macrocode}
%  \end{macro}
